#include <stdio.h>
#include <string.h>
#include <unistd.h>

void main(int argc, char *argv[]){
	FILE *incoming, *outgoing;
	//outgoing = fopen(argv[1],"w");
	
	while(1){
		outgoing = fopen(argv[1],"w");
		char *mymsg;
		scanf(mymsg);
		fputs(mymsg,outgoing);
		fclose(outgoing);
		sleep(3);
		printf("enter new line\n");
	}
}
